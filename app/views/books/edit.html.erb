<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
<div class="field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body, "Body" %>
  <%= f.text_field :body %>
</div>
<div class="action"></div>
  <%= f.submit "Update Book" %>

<% end %>

<%= link_to "Show", book_path(@book) %>
|
<%= link_to "Back", books_path %>
