<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>たいとる</td>
      <td>かんそう</td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@new_book, local: true do |f| %>
<div class="field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
</div>
<div class="action">
  <%= f.submit "Create Book" %>
</div>

<% end %>
